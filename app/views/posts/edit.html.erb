<div class="row mt-5">
  <div class="col-12 item-bcolor p-4">
    <%= form_tag("/posts/#{@post.id}/update") do %>
      <% @post.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
      <div class="form-group pt-3">
        <label class="pb-2" for="postFormControlTextarea">投稿の編集</label>
        <textarea name="content" class="py-4 form-control" rows="5"><%= @post.content %></textarea>
      </div>
      <div class="pb-2">
        <button type="submit" class="btn btn-outline-primary">保存</button>
      </div>
    <% end %>
  </div>
</div>
